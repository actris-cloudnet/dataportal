#!/bin/zsh
set -e

if [ -z $1 ]; then
    echo "Action not specified"
    exit 1
fi

action=$1

fileserver_port=4000
frontend_port=8000
backend_port=3000
pid_dir='.'

if [[ "$NODE_ENV" == 'test' ]]; then
    backend_port=3001
    pid_dir='tests'
fi

is_production () {
    [ "$NODE_ENV" '==' 'production' ]
}

waitport () {
    timeout=15
    interval=0.5
    i=0
    echo -n "Waiting for port $1... "
    while ! nc -z localhost $1 2> /dev/null; do
        if [[ "$i" -ge $timeout ]]; then
            echo "Timeout"
            return 2
        fi
        sleep $interval
        i=$((i+$interval))
    done
    echo "OK"
    return 0
}

backend_postinstall () {
    mkdir -p public
    mkdir -p public/viz
    mkdir -p inbox
    mkdir -p tests/data/inbox
    mkdir -p tests/data/inbox/inbox
    mkdir -p tests/data/public/viz
    createdb dataportal
    createdb dataportal-test
    npm run build
}

case "$action" in
    start)
    echo "Starting backend..."
    cd backend
    target=$pid_dir/.node.pid
    if [[ ! -f $target ]]; then
        eval "nohup npx nodemon -w build -- $backend_port >> $pid_dir/all.log 2>&1 &"
        echo $! > $target
    fi
    echo
    cd ..
    if ! is_production; then
        echo "Starting nginx..."
        if [[ ! -f .nginx.pid ]]; then
            nginx -p . -c .nginx.conf
        fi
        waitport $fileserver_port
        waitport $frontend_port
    fi

    waitport $backend_port
    exit $?
    ;;

    stop)
    set +e
    for pid in backend/$pid_dir/.*.pid; do
        echo $pid
        pkill -P $(< $pid)
        pkill -F $pid
        rm -f $pid
    done
    if ! is_production; then
        echo .nginx.pid
        pkill -F .nginx.pid
        truncate --size 0 */$pid_dir/all.log
    fi
    ;;

    restart)
    ./control stop
    ./control start
    ;;

    test-start)
    export NODE_ENV='test'
    node backend/tests/lib/storage-service-mock.js >> backend/tests/all.log 2>&1 &
    ./control start
    waitport 5910
    unset NODE_ENV
    ;;

    test-stop)
    set +e
    export NODE_ENV='test'
    ./control stop
    kill $(lsof -t -i:5910)
    unset NODE_ENV
    ;;

    test-restart)
    ./control test-stop
    ./control test-start
    ;;

    purge)
    if ! is_production; then
        dropdb dataportal
        dropdb dataportal-test
        rm -rf */build
        rm -rf */dist
        rm -rf */node_modules
    else
        echo "This action cannot be run in production."
        exit 2
    fi
    ;;

    clean)
    set +e
    rm -vf backend/$pid_dir/.*.pid
    rm -vf .nginx.pid
    ;;

    install)
    echo "Installing backend..."
    cd backend
    npm install
    ! is_production && backend_postinstall
    echo
    echo "Installing frontend..."
    cd ../frontend
    npm install
    echo
    if [ -d ../shared ]; then
        echo "Installing shared..."
        cd ../shared
        npm install
    fi
    cd ..
    ;;

    ci)
    echo "Installing backend..."
    cd backend
    npm ci
    backend_postinstall
    echo
    echo "Installing frontend..."
    cd ../frontend
    npm ci
    echo
    if [ -d ../shared ]; then
        echo "Installing shared..."
        cd ../shared
        npm install
    fi
    cd ..
    ;;

    lint)
    cd frontend
    npm run lint
    cd ../backend
    npm run lint
    cd ../shared
    npm run lint
    cd ..
    ;;

    build)
    echo "Building frontend..."
    cd frontend
    [ -d dist ] && rm -rf dist
    npm run build
    echo "Building backend..."
    cd ../backend
    [ -d build ] && rm -rf build
    npm run build
    cd ..
    ;;

    selenium-test)
    cd frontend
    npx vue-cli-service build --mode e2e
    cd ../backend
    set +e
    npx jest --runInBand tests/selenium
    cd ..
    ;;

    *)
    echo "Unknown action $action"
    exit 1
    ;;
esac

